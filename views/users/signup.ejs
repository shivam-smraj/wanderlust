<% layout("/layouts/boilerplate") %>


<div class="row mt-3">
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <h1>SignUp on Wanderlust</h1>

            <div class="mb-3">
                <label for="username" class="form-lebel">Username</label>
                <input
                    name="username"
                    type="text"
                    class="form-control"
                    required
                />
                <div class="valid-feedback"> looks good !</div>
                <div class="invalid-feedback">Username should be valid!</div>
            </div>

            <div class="mb-3">
                <label for="email" class="form-lebel">Email</label>
                <input
                    name="email"
                    type="text"
                    class="form-control"
                    required
                />
                <div class="invalid-feedback">Email should be valid!</div>
            </div>
            
            <div class="mb-3">
                <label for="password" class="form-lebel">Password</label>
                <input
                    name="password"
                    type="text"
                    class="form-control"
                    required
                />
                <div class="invalid-feedback">Password should be valid!</div>
            </div>
            <button class="btn btn-success">SignUp</button>

        </form>


    </div>



</div>