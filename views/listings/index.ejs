        <div class="form-check-reverse form-switch">
            <input 
                class="form-check-input" 
                type="checkbox" 
                role="switch" 
                id="flexSwitchCheckDefault">
            <label 
                class="form-check-label" 
                for="flexSwitchCheckDefault">Display total</label>    
        </div>
